<div class="row">
  <div class="col-md-8">
  <%= render partial: 'form', locals: { list: @list, task: @task } %>
  <%= link_to "Edit", edit_list_task_path(@list,@task), class: 'btn btn-success' %>
  </div>
   <div class="col-md-8">
   <b><tr class="warning">Days Left To Complete</b> <%= @task.days_remaining %></tr>   
      </div>
  </div>
  
  <div class="col-md-8 form-group top-padding">
    <%= link_to "Delete task", [@list, @task], method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this task?' } %>
  </div>