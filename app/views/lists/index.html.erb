<h1>All Lists</h1>

<div class = "row">
  <div class="col-md-8">
    <%= link_to "New List", new_list_path, class: 'btn btn-success' %>
  </div>
</div>

<hr />

<div class="row">
  <div class="col-md-8">
<% @lists.each do |list| %>
  <div class="media">
     <div class="media-body">
       <h4 class="media-heading">
         <%= link_to list.title, list %>
       </h4>
        <%= list.description %>
      </br>
      <small>
        submitted <%= time_ago_in_words(list.created_at) %> ago by <%= list.user.name %><br/>
         <%= pluralize(list.tasks.count, 'Task') %> 
         <br/>
         <% if list.tasks.where(overdue: true).any? %>
            <div class="alerts"><%= pluralize(list.tasks.where(overdue: true).count, 'Overdue Task') %>
         </div>
         <% end %>
       </small>
     </div>
   </div>
   <% end %>
  </div>
  </div>
