  <%= link_to "Edit List", edit_list_path, class: 'btn btn-success' %>

    <p><strong><div class="top-padding">You have work to do!</div></strong></p>

    <div class="panel panel-primary">
      <div class="panel-body">
      <strong>
    <div class="col-sm-3 text-center"> Task Title </div>
    <div class="col-sm-2 text-left"> Description </div>
    <div class="col-sm-2 text-left"> Days left to Complete </div>
    <div class="col-sm-2 text-center"> Task Complete? </div>
    <div class="col-sm-2 text-center"> Overdue? </div>
    </strong>
    </div>
    </div>
    <div class="jumbotron", align=center>
      <div class="container">
        <div class='js-tasks'> 
        <%= render @tasks %>
        </div>
      </div>
    </div>
    <div class='new-task'>
  <p><strong><div class="top-padding">Want more?</div></strong></p>
    <%= render "tasks/form" %>
 
      <%= link_to "Delete List", @list, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this list?' } %>
    </div>
