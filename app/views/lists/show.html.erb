<h1><%= @list.title %></h1>
<h2><small><%= @list.description %></small></h2>

  <%= link_to "Edit List", edit_list_path, class: 'btn btn-success' %>

<div class="row">
  <div class="col-md-8 top-padding">
    <p><strong>You have work to do!</strong></p>
  <div class="center-block">
    <%= render @tasks %>
  </div>
    <p><strong>Want more?<strong></p>
    <%= render partial: "tasks/form", locals: { list: @list, task: @task } %>
    
  </div>
  <div class="col-md-8">
      <%= link_to "Delete List", @list, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this list?' } %>
    </div>
</div>